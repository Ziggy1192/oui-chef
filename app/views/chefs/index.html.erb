      <li><%= image_tag "vegan.png" %></li>
      <li><%= image_tag "vegetarian.png" %></li>
      <li><%= image_tag "dessert.png" %></li>
    </ul>
  </div>
    <div class="chefs-cards">
      <% @chefs.each do |chef| %>
        <%= link_to chef_path(chef) do %>
        <div class="card-chef">
          <div class="card-img" style="background-image: url(<%=asset_path chef.img_url%>)">
          </div>
          <div class="card-info">
            <h4><%=chef.user.first_name.upcase%>
            <%=chef.user.last_name.upcase%></h4>
            <p><%=chef.speciality.upcase %></p>
