<div class="container show-box">

  <div class="row">
    <div class="col-7 chef-container">
      <h1 class='m-3 text-grey'><%= @chef.user.first_name.upcase %> <%= @chef.user.last_name.upcase  %></h1>
      <div class="chef-infos d-flex justify-content-start">
        <h2 class='m-3 font-light'><i class="fa-solid fa-star-of-life"></i><strong> <%= @chef.price %></strong></h2>
        <h2  class='m-3 font-light'> 40 REVIEWS </h2>
        <h2  class='m-3 font-light'><i class="fa-solid fa-fish"></i>MASTER</h2>
      </div>
      <div class='box-beige'>
        <p><%= 'VEGAN LOVER WITH A PASSION FOR FASHION'%></p>
        <p><%='I LOVE SUSHI' %></p>
      </div>
      <div class='box-orange'>
      <p><i class="fa-solid fa-user"></i><%= @chef.profile%></p>
      <p class='info'><i class="fa-solid fa-location-pin"></i><%= @chef.user.address %></p>
      <p class='info'><i class="fa-solid fa-at"></i><%= @chef.user.email %></p>
      </div>
    </div>
    <div class="col-5">
    <% if @chef.user.photo.attached? %>
      <div class='chef-image' style="background-image: url('<%= cl_image_path @chef.user.photo.key %>')">
      </div>
      <% end %>

     <div class='bookings'>
      <%= simple_form_for [@chef, @booking], data: {controller: "price"} do |f| %>
        <%= f.input :start_date, as: :date, html5: true, data:{ price_target: "start"} %>
        <%= f.input :end_date, as: :date, html5: true %>
        <p>Price:</p>
        <%= f.submit "BOOK #{@first_name.upcase}", class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
  <% @chef.photos.each do |photo| %>
    <div class="carousel-item active">
      <img src="<%= cl_image_path photo.key %>" class="d-block w-100" alt="...">
    </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    OUI CHEFS LONDON!
  </div>
</div>
