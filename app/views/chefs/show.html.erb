<div class="container">

  <div class="row">
    <div class="col-7 chef-container">
      <h1 class='m-3 text-grey'><%= @chef.user.first_name.upcase %> <%= @chef.user.last_name.upcase  %></h1>
      <div class="chef-infos d-flex justify-content-start">
        <h2 class='m-3 font-light'><i class="fa-solid fa-star-of-life"></i><strong>4.99</strong></h2>
        <h2  class='m-3 font-light'> 40 REVIEWS </h2>
        <h2  class='m-3 font-light'><i class="fa-solid fa-fish"></i>MASTER</h2>
      </div>
      <div class='box-beige'>
        <h4><%= @chef.user.first_name.upcase%>
        <%=@chef.user.last_name.upcase%></h4>
        <p><%=@chef.speciality.upcase %></p>
      </div>
      <div class='box-orange'></div>
    </div>
    <div class="col-5">
      <div class='chef-image' style="background-image: url(<%=asset_path(@chef.img_url)%>)"></div>

     <div class='bookings'> <%= simple_form_for [@chef, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>

     <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://media.gq-magazine.co.uk/photos/60d5ac0ebb8986e188ac69e6/master/pass/24062021_food_hp.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://resizer.otstatic.com/v2/photos/wide-huge/4/42527498.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/fine-dining-grilled-sea-bass-royalty-free-image-1626951675.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr>

